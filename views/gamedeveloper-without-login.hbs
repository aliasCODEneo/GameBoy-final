<div class="pt1 everything">
    {{> header-without-login}}
    <div class="d-flex flex-row top">
        <div class="d-flex flex-column text-white left">
            <img src="{{gameDeveloper.image}}">
            <div class="name">{{gameDeveloper.name}}</div>
            <p class="par">{{gameDeveloper.description}}</p>
        </div>
        <div class="d-flex text-white flex-column rightSide">
            <div class="first fw-bold">Games Developed</div>
            <div class="d-flex flex-row LMFAO">
                {{#each gamesDeveloped}}
                <div class="d-flex flex-column LMAO">
                    <img src="data:image/jpeg;base64,{{this.gameImageBase64}}">
                    <div class="fw-bold words">{{this.name}}</div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

