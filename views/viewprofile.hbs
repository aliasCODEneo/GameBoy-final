<div class="pt1 everything">
    {{> header-login}}
    <div class="text-end">
      <a href="edit-user-profile"><button class="fw-bold edit">Edit Profile</button></a>
    </div>
    <div class="d-flex flex-row top">
      <div class="d-flex flex-column text-white left">
      {{#if isBase64}}
          <img src="data:image/jpeg;base64,{{user.profilePicture}}">
      {{else}}
          <img src="{{user.profilePicture}}">
      {{/if}}
        <div class="name">{{ user.name }}</div>
        <div class="member">Member since: {{ user.signupDate }} </div>
        <div class="d-flex flex-row text-black onTop">
          <div class="d-block n1">
            <div class="fw-bold">
              <span class="number-border1">400</span>
            </div>
            <div class="fw-bold text-white reviews">reviews</div>
          </div>
          <div class="d-block n2">
            <div class="fw-bold">
              <span class="number-border2">400</span>
            </div>
            <div class="fw-bold text-white followers">followers</div>
          </div>
          <div class="d-block n3">
            <div class="fw-bold">
              <span class="number-border3">400</span>
            </div>
            <div class="fw-bold text-white following">following</div>
          </div>
        </div>
        <div class="reds">ALISHA</div>
        <div class="reds">TRISTAN</div>
        <div class="reds">AARON</div>
        <div class="reds">SHAIMMA</div>
        <div class="reds">STEPHANIE</div>
        <div class="reds">VINCENT</div>
        <div class="reds">NEO</div>
      </div>
      <div class="d-flex text-white flex-column rightSide">
        <div class="first fw-bold">About Me:</div>
        <div class="d-flex flex-row LMFAO">
          <div class="d-flex flex-column LMAO">
            <div class="fw-bold words">{{user.about}}</div>
          </div>
        </div>
    </div>
  </div>

